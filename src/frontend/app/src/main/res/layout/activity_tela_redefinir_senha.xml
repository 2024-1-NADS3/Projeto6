<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaRedefinirSenha">

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_height="550dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/voltar_tela_recuperar_senha"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/titulo_redefinir_senha"
        style="@style/TextView"
        android:text="Redefinir senha"
        android:textSize="30sp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        />

    <View
        android:id="@+id/containerComponentsBox"
        style="@style/ContainerComponentsBox"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo_redefinir_senha"
        />

    <TextView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/check"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="@id/containerComponentsBox"
        app:layout_constraintTop_toTopOf="@+id/containerComponentsBox"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsBox"
        />

    <TextView
        android:id="@+id/email_usuario_recuperar"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="@id/containerComponentsBox"
        app:layout_constraintTop_toTopOf="@+id/containerComponentsBox"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsBox"
        />

    <TextView
        android:id="@+id/subtitulo_redefinir_senha"
        style="@style/TextView"
        android:layout_width="300dp"
        android:text="@string/subtitulo_redefinir_senha"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/containerComponentsBox"
        />

    <EditText
        android:id="@+id/inserir_codigo"
        style="@style/Edit_Text_Cadastro"
        android:hint="Código de confirmação"
        android:inputType="number"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/subtitulo_redefinir_senha"
        android:maxLength="6"
        />

    <EditText
        android:id="@+id/nova_senha"
        style="@style/Edit_Text_Cadastro"
        android:hint="Nova senha"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/inserir_codigo"
        />

    <EditText
        android:id="@+id/confirmar_nova_senha"
        style="@style/Edit_Text_Cadastro"
        android:hint="Confirmar nova senha"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/nova_senha"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enviar_email"
        style="@style/ButtonGreen"
        android:onClick="enviarDados"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:text="Redefinir"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/confirmar_nova_senha" />

</androidx.constraintlayout.widget.ConstraintLayout>