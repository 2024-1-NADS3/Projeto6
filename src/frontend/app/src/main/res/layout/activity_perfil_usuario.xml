<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerLayout_PerfilUsuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilUsuario">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBarLayout_TelaPerfilUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Toolbar
                android:id="@+id/Toolbar_TelaPerfilUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:titleTextColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titulo_PerfilUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Educaliza"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/Toolbar_TelaPerfilUsuario"
                app:layout_constraintEnd_toStartOf="@id/ic_usuarioPerfil"
                app:layout_constraintHorizontal_bias="0.57"
                app:layout_constraintStart_toStartOf="@+id/Toolbar_TelaPerfilUsuario"
                app:layout_constraintTop_toTopOf="@id/Toolbar_TelaPerfilUsuario"
                app:layout_constraintVertical_bias="0.517" />

            <Button
                android:id="@+id/ic_usuarioPerfil"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:contentDescription="Botão de Usuário"
                android:drawableTop="@drawable/ic_usuario"
                app:layout_constraintBottom_toBottomOf="@id/Toolbar_TelaPerfilUsuario"
                app:layout_constraintEnd_toEndOf="@id/Toolbar_TelaPerfilUsuario"
                app:layout_constraintTop_toTopOf="@id/Toolbar_TelaPerfilUsuario"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/containerComponentsPerfilUsuario"
        style="@style/ContainerComponents"
        android:layout_width="341dp"
        android:layout_height="166dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppBarLayout_TelaPerfilUsuario" />

    <View
        android:id="@+id/testandoWarning"
        android:layout_width="312dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewCursosUsuarios"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintStart_toStartOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Meus cursos"
        android:textColor="#fff"
        android:textSize="22dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintStart_toStartOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintTop_toTopOf="@+id/containerComponentsPerfilUsuario" />

    <SearchView
        android:id="@+id/searchViewUser"
        android:layout_width="312dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/search_view_perfis"
        android:queryHint="Nome do curso"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintStart_toStartOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="312dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/spinner_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintStart_toStartOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintTop_toBottomOf="@+id/searchViewUser">

        <Spinner
            android:id="@+id/spinner_filtros"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:radius="8dp"
            android:textSize="10sp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCursosUsuarios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerComponentsPerfilUsuario"
         />

    <ProgressBar
        android:id="@+id/progressBarUser"
        style="?android:attr/progressBarStyle"
        android:layout_width="46dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewCursosUsuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/errorUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="17sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewCursosUsuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerComponentsPerfilUsuario"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textAdvertencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="Advertências:"
        android:textColor="#FF3434"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/testandoWarning"
        app:layout_constraintStart_toStartOf="@+id/testandoWarning"
        app:layout_constraintTop_toTopOf="@+id/testandoWarning"
        app:layout_constraintVertical_bias="0.272" />

    <TextView
        android:id="@+id/warnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="0"
        android:textColor="#FF3434"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/testandoWarning"
        app:layout_constraintEnd_toEndOf="@+id/testandoWarning"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toEndOf="@+id/textAdvertencias"
        app:layout_constraintTop_toTopOf="@+id/testandoWarning"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/warningIcon"
        android:layout_width="30dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/testandoWarning"
        app:layout_constraintEnd_toEndOf="@+id/testandoWarning"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toEndOf="@+id/warnings"
        app:layout_constraintTop_toTopOf="@+id/testandoWarning"
        app:layout_constraintVertical_bias="0.444"
        app:srcCompat="@drawable/exclamation" />


</androidx.constraintlayout.widget.ConstraintLayout>