<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#80778CF9"
    android:outlineProvider="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/courseImg"
            android:layout_width="79dp"
            android:layout_height="83dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:scaleType="fitStart" />

        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@id/courseImg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/courseTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#D8000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Título do Curso longo para text" />

                <TextView
                    android:id="@+id/courseType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#D8000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Tipo do Curso" />
            </LinearLayout>

            <TextView
                android:id="@+id/courseCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="Categoria do Curso" />

            <TextView
                android:id="@+id/courseAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="Endereço do Curso" />

            <TextView
                android:id="@+id/slotsAndMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="Vagas" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:text="Inscrever-se ↓"
                android:textAlignment="center"
                android:textColor="#2196F3"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>