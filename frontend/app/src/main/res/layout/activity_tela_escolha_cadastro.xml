<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TelaEscolhaCadastro">

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_height="450dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/voltar_login"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_voltar_foreground"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/educalizalogo"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        />

    <TextView
        android:id="@+id/tela_cadastro_login"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        style="@style/TextView"
        android:text="@string/tela_cadastro_login"
        android:textSize="24sp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/form_usuario"
        style="@style/ButtonInicio"
        android:layout_marginTop="30dp"
        android:onClick="formUsuario"
        android:text="UsuÃ¡rio"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintEnd_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/tela_cadastro_login"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_cadastro_parceiro"
        style="@style/ButtonInicio"
        android:layout_marginTop="20dp"
        android:onClick="formParceiro"
        android:text="Parceiro"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintEnd_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/form_usuario"
        />





</androidx.constraintlayout.widget.ConstraintLayout>